@model SecurityAssetManager.Models.UserDomain
@{
    ViewBag.Title = "ViewRouting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Routing</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.DomainID, "Your Domains", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DomainID", null, "-- Select a Domain to View --", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DomainID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}