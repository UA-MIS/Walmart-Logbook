@model SecurityAssetManager.Models.ViewModels.UserDomainVM

@{
    ViewBag.Title = "Archive";
}
<h2>Remove Domain From User</h2>

<h3>Are you sure you want to remove this domain from the user?</h3>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(m => m.UserID)

        <div class="form-group">
            @Html.LabelFor(model => model.DomainID, "Your Domains", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DomainID", (IEnumerable<SelectListItem>)ViewBag.UserDomains, "Select a Domain to Remove", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DomainID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Remove" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
