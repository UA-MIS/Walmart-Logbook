@model SecurityAssetManager.Models.UserDomain

@{
    ViewBag.Title = "Create";
}

<h2>Add</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>UserDomain</h4>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.UserID, "User", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("UserID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
        </div>
    </div>
    
 
        <div class="form-group">
            @Html.LabelFor(model => model.DomainID, "Domain", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownList("DomainID", null, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.DomainID, "", new {@class = "text-danger"})
            </div>
        </div>
    

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Details", "Details", "UsersAdmin", new { id = Model.UserID }, null)
</div>
